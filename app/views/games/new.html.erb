<h1 style="font-family:verdana">New Game</h1>

<h2 style="font-family:verdana">
  <% @letters.each do |letter| %>
  <%= letter %>
  <% end %>
</h2>

<h2 style="font-family:verdana">What is the longest word you can find?</h2>

<form action="/score" method="post" data-turbo="false">
  <input type="text" name="guess">
  <input type="submit" value="Give it a try!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
